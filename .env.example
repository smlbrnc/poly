# =============================================================================
# Polymarket Arbitraj — Ortam Değişkenleri Şablonu
# =============================================================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun. .env git'e eklenmez.
# cp .env.example .env
# =============================================================================

# --- Polymarket CLOB API ---
POLYMARKET_CLOB_API_URL=https://clob.polymarket.com
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=
PRIVATE_KEY=
# Python get_polymarket_api_credentials.py ile türetilen key için true yapın (EOA, type 0)
POLYMARKET_USE_EOA=true
# POLYMARKET_USE_EOA=true değilse: 0=EOA, 1=Magic/email, 2=tarayıcı cüzdan
POLYMARKET_SIGNATURE_TYPE=0
# EOA için boş. Proxy kullanıyorsanız Polymarket profil adresinizi yazın
POLYMARKET_FUNDER_ADDRESS=

# --- Alchemy (Polygon) ---
ALCHEMY_POLYGON_API_KEY=
ALCHEMY_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# --- Polygon RPC ---
POLYGON_RPC_URL=

# --- LLM (Google Gemini) ---
GOOGLE_GEMINI_API_KEY=
# GOOGLE_GEMINI_MODEL=gemini-2.0-flash  # opsiyonel

# --- Gurobi (opsiyonel) ---
GRB_LICENSE_FILE=

# --- Risk ---
MIN_PROFIT_MARGIN_USD=0.05
MAX_DAILY_DRAWDOWN_PCT=15
MAX_SINGLE_TRADE_PCT=2

# --- Execution ---
EXECUTION_MODE=paper
DRY_RUN=true

# --- Veri hattı ---
BUFFER_MINUTES=10
BUFFER_MAX_MB=500

# --- Web panel ---
WEB_ADMIN_SECRET=
WEB_ADMIN_SESSION_TTL_MINUTES=60

# --- Alert e-posta (Resend) ---
RESEND_API_KEY=
RESEND_FROM=Kripto Izleme <onboarding@resend.dev>
RESEND_TO=

# --- Log ---
LOG_LEVEL=INFO

# --- Contract ---
POLYMARKET_CTF_EXCHANGE_ADDRESS=0x4D97DCd97eC945f40cF65F87097ACe5EA0476045
